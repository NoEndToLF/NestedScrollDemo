<?xml version="1.0" encoding="utf-8"?>
<com.wxy.nestedscroll.nested.NestedScrollParentView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NestedScrollActivity"
    android:orientation="vertical"
    app:head_imageview_id="@id/iv_second"
    app:floating_view_id="@id/linear_floating"
    >
    <com.wxy.nestedscroll.nested.NestedScrollChildView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:id="@+id/iv_second"
            android:src="@mipmap/ic_bg"
            android:tag="imageView"
            android:scaleType="centerCrop"
            >
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:tag="view"
            android:id="@+id/linear_floating"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/tv_one"
                ></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/tv_two"

                ></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/tv_three"

                ></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/tv_four"
                ></TextView>
        </LinearLayout>

</LinearLayout>
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:minHeight="46dp"
            android:background="@color/white"
            app:contentInsetStart="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/linear_toolbar_back"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:id="@+id/iv_toolbar_back"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:src="@mipmap/back"
                                 />
                        </LinearLayout>
                    <TextView
                        android:id="@+id/tv_toolbar_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:lines="1"
                        android:scrollHorizontally="true"
                        android:textColor="#000000"
                        android:ellipsize="end"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <RelativeLayout
                        android:id="@+id/relative_toolbar_right"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:visibility="visible">
                        <ImageView
                            android:id="@+id/iv_toolbar_right"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/add"
                            android:layout_marginRight="15dp" />
                    </RelativeLayout>
                </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.wxy.nestedscroll.nested.NestedScrollChildView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_name"
        android:tag="recyclerView"
        ></androidx.recyclerview.widget.RecyclerView>
</com.wxy.nestedscroll.nested.NestedScrollParentView>